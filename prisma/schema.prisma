datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EventType {
  WEDDING
  BIRTHDAY
  OPENING
  MEETING
  OTHER
}
model Event {
  id       String    @id @default(cuid())
  name     String
  type     EventType
  date     DateTime  @db.Date
  time     String
  venue    String?
  description String?
  archived Boolean   @default(false)
  tasks    Task[]
}

enum TaskLabel {
  ANA
  BELU
}

enum TaskStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}
model Task {
  id       String   @id @default(cuid())
  title    String
  status   TaskStatus
  label    TaskLabel?
  priority TaskPriority
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  String
}
