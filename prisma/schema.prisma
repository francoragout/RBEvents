datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EventType {
  WEDDING
  BIRTHDAY
  OPENING
  MEETING
  OTHER
}

model Event {
  id       String    @id @default(cuid())
  name     String
  type     EventType
  date     DateTime  @db.Date
  time     String
  archived Boolean   @default(false)
  tasks    Task[]
}

model Task {
  id       String   @id @default(cuid())
  title    String
  status   String
  label    String
  priority String
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  String
}
